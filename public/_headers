/*.html
  Cache-Control: public, max-age=0, must-revalidate

/index.html
  Cache-Control: public, max-age=0, must-revalidate

/api/
  Cache-Control: no-store

/site.css
  Cache-Control: public, max-age=0, must-revalidate

/* Vite-hashed build outputs (safe to cache forever) */
/assets/*
  Cache-Control: public, max-age=31536000, immutable
  Vary: Accept-Encoding

/* Brand and navigational images should refresh after each deploy */
/brand/*
  Cache-Control: public, max-age=0, must-revalidate

/planets/*
  Cache-Control: public, max-age=0, must-revalidate

/* Icons should also revalidate across deployments */
/favicon.ico
  Cache-Control: public, max-age=0, must-revalidate

/favicon.png
  Cache-Control: public, max-age=0, must-revalidate

/apple-touch-icon.png
  Cache-Control: public, max-age=0, must-revalidate

